# X(Twitter) API (write access requires all four keys)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
# Alternatively, read-only bearer if needed
TWITTER_BEARER_TOKEN=

# Google Gemini API
GEMINI_API_KEY=

# Meta Threads API (requires business account and app approval)
# Option 1: Direct access token (recommended for production)
THREADS_ACCESS_TOKEN=
THREADS_USER_ID=

# Option 2: App credentials (will generate access token automatically)
THREADS_APP_ID=
THREADS_APP_SECRET=
# THREADS_USER_ID= (still required for both options)

# Optional: runtime controls
# CRON_SCHEDULE=0 9 * * *
# NODE_ENV=development
